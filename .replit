modules = ["python-3.10:v18-20230807-322e88b", "nodejs-18:v3-20230608-f4cd419"]
hidden = [".pythonlibs"]
run = "python reporter/chef/main.py"

[env]
REPLIT_NO_WEBVIEW = "true"

[nix]
channel = "stable-23_05"

[unitTest]
language = "python3"

[deployment]
deploymentTarget = "gce"
build = ["sh", "-c", "pip install gunicorn && npm install"]
run = ["sh", "-c", "PYTHONUNBUFFERED=1 gunicorn -w 4 'reporter.chef.deployment:app' --bind 0.0.0.0:80"]

[languages.javascript]
pattern = "**/*.{js,jsx,ts,tsx,json}"
[languages.javascript.languageServer]
start = ["typescript-language-server", "--stdio"]

[[ports]]
localPort = 80
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000
